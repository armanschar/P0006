@model P0006.Models.ViewModels.TipdocEditViewModels
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@{
    ViewBag.Title = "Actualiza Tipo Documento";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-center">
                <h2 class="display-6 fw-bold text-success mb-0">Actualiza Tipo Documento</h2>
                <div class="ms-3">
                    <span class="badge bg-success">Edición</span>
                </div>
            </div>
            <hr class="border-success mx-auto" style="max-width: 300px;">
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Información del Tipo de Documento</h5>
                </div>
                <div class="card-body m-auto text-center">
                    @using (Html.BeginForm("TipdocEdit", "Tipdoc", FormMethod.Post, new { role = "form", @class = "mx-auto", style = "max-width: 400px;" }))
                    {
                        @Html.HiddenFor(d => d.Id)

                        <div class="mb-3 text-start">
                            @Html.LabelFor(d => d.Tipodoc, new { @class = "form-label fw-semibold text-success" })
                            @Html.TextBoxFor(d => d.Tipodoc, new { @class = "form-control shadow-sm", placeholder = "Ingrese el tipo de documento" })
                            @Html.ValidationMessage("Tipo documento", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3 text-start">
                            @Html.LabelFor(d => d.Origen, new { @class = "form-label fw-semibold text-success" })
                            @Html.TextBoxFor(d => d.Origen, new { @class = "form-control shadow-sm", placeholder = "Ingrese el origen" })
                            @Html.ValidationMessage("Origen", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3 text-start">
                            @Html.LabelFor(d => d.Descripcion, new { @class = "form-label fw-semibold text-success" })
                            @Html.TextBoxFor(d => d.Descripcion, new { @class = "form-control shadow-sm", placeholder = "Ingrese la descripción" })
                            @Html.ValidationMessage("Descripción", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3 text-start">
                            @Html.LabelFor(d => d.CtaDebito, new { @class = "form-label fw-semibold text-success" })
                            @Html.TextBoxFor(d => d.CtaDebito, new { @class = "form-control shadow-sm", placeholder = "Ingrese la cuenta débito" })
                            @Html.ValidationMessage("Cuenta Débito", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-4 text-start">
                            @Html.LabelFor(d => d.CtaCredito, new { @class = "form-label fw-semibold text-success" })
                            @Html.TextBoxFor(d => d.CtaCredito, new { @class = "form-control shadow-sm", placeholder = "Ingrese la cuenta crédito" })
                            @Html.ValidationMessage("Cuenta Crédito", new { @class = "text-danger small" })
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <input type="submit"
                                   value="Enviar"
                                   class="btn btn-success btn-lg shadow-sm px-4" />
                            <input type="button"
                                   value="Volver Atrás"
                                   class="btn btn-secondary btn-lg px-4"
                                   onclick="document.location.href='@Url.Content("../TipdocQuery")'" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>